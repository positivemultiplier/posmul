{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "isolatedModules": true,
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
