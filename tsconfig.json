{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "ignoreDeprecations": "5.0",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@posmul/*": [
        "packages/*/src"
      ],
      "@/shared/components/*": [
        "packages/shared-ui/src/components/*"
      ],
      "@/shared/components": [
        "packages/shared-ui/src/components/index.ts"
      ],
      "@/shared/types/*": [
        "packages/shared-types/src/*"
      ],
      "@/shared/types": [
        "packages/shared-types/src/index.ts"
      ],
      "@/shared/utils/*": [
        "packages/shared-ui/src/utils/*"
      ],
      "@/shared/utils": [
        "packages/shared-ui/src/utils/index.ts"
      ],
      "@/shared/mcp/*": [
        "packages/shared-auth/src/*"
      ],
      "../../shared/types/*": [
        "packages/shared-types/src/*"
      ],
      "../../shared/components/*": [
        "packages/shared-ui/src/components/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "scripts/**/*.js",
    "**/*legacy*",
    "**/*.tmp.*",
    "**/samples/**",
    "**/sports/**",
    "**/loading.*",
    "**/error.*",
    "**/api/**",
    "**/src_migrated/**"
  ]
}