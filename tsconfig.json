{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@posmul/*": ["packages/*/src"],
      "@/shared/components/*": ["packages/shared-ui/src/components/*"],
      "@/shared/components": ["packages/shared-ui/src/components/index.ts"],
      "@/shared/types/*": ["packages/shared-types/src/*"],
      "@/shared/types": ["packages/shared-types/src/index.ts"],
      "@/shared/utils/*": ["packages/shared-ui/src/utils/*"],
      "@/shared/utils": ["packages/shared-ui/src/utils/index.ts"],
      "@/shared/mcp/*": ["packages/shared-auth/src/*"],
      "../../shared/types/*": ["packages/shared-types/src/*"],
      "../../shared/components/*": ["packages/shared-ui/src/components/*"]
    }
  },
  "exclude": ["node_modules"]
}
